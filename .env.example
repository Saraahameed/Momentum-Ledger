# Application port (default: 5000)
APP_PORT=5000

# MongoDB port on host (default: 27018)
MONGO_PORT=27018

# JWT Secret - CHANGE THIS to a long random string
JWT_SECRET=your-super-secret-key-change-this-in-production

# JWT token expiration (default: 7d)
JWT_EXPIRES_IN=7d

# Auth cookie lifetime in days (default: 7)
AUTH_COOKIE_DAYS=7

# Client origin for CORS (default: http://localhost:5000)
CLIENT_ORIGIN=http://localhost:5000
